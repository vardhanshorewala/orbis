{
  "name": "orbis-relayer",
  "version": "1.0.0",
  "description": "Cross-chain relayer for Orbis bridge supporting TON and EVM networks",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/example.ts",
    "start": "ts-node src/example.ts",
    "test": "jest",
    "test-adapter": "ts-node src/test-ton-adapter.ts",
    "test-tron": "ts-node src/end-to-end-ton.ts",
    "clean": "rm -rf dist",
    "demo": "ts-node src/demo/relayer-demo.ts",
    "test:ton": "ts-node src/end-to-end-ton.ts"
  },
  "keywords": ["cross-chain", "bridge", "ton", "ethereum", "relayer"],
  "author": "Orbis Team",
  "license": "MIT",
  "dependencies": {
    "@ton/core": "^0.56.0",
    "@ton/ton": "^14.0.0",
    "@ton/crypto": "^3.2.0",
    "@ton/blueprint": "^0.38.0",
    "@tact-lang/compiler": "^1.6.13",
    "@ton-community/func-js": "^0.9.1",
    "@ton/tolk-js": "^1.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "cors": "^2.8.5"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.0",
    "ts-jest": "^29.1.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/__tests__/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/**/*.d.ts"
    ]
  }
} 
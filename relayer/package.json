{
  "name": "orbis-relayer",
  "version": "1.0.0",
  "description": "Cross-chain relayer for Orbis bridge supporting TON and EVM networks",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/example.ts",
    "start": "ts-node src/example.ts",
    "test": "jest",
    "test-adapter": "ts-node src/test-ton-adapter.ts",
    "test-tron": "ts-node src/end-to-end-ton.ts",
    "clean": "rm -rf dist",
    "demo": "ts-node src/demo/relayer-demo.ts",
    "test:ton": "ts-node src/end-to-end-ton.ts"
  },
  "keywords": [
    "cross-chain",
    "bridge",
    "ton",
    "ethereum",
    "relayer"
  ],
  "author": "Orbis Team",
  "license": "MIT",
  "dependencies": {
    "@tact-lang/compiler": "^1.6.13",
    "@ton-community/func-js": "^0.9.1",
    "@ton/blueprint": "^0.38.0",
    "@ton/core": "^0.56.0",
    "@ton/crypto": "^3.2.0",
    "@ton/tolk-js": "^1.0.0",
    "@ton/ton": "^14.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.19.9",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.test.ts",
      "!src/**/*.d.ts"
    ]
  }
}

{
  "name": "ton-fusion-plus",
  "version": "1.0.0",
  "description": "1inch Fusion+ extension for TON blockchain with HTLC smart contracts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "compile-contracts": "node scripts/compile-contracts.js",
    "deploy:testnet": "ts-node scripts/deploy-testnet.ts",
    "deploy:mainnet": "ts-node scripts/deploy-mainnet.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "clean": "rimraf dist"
  },
  "keywords": [
    "1inch",
    "fusion+",
    "ton",
    "blockchain",
    "atomic-swap",
    "cross-chain",
    "defi",
    "escrow",
    "htlc"
  ],
  "author": "TON Fusion+ Development Team",
  "license": "MIT",
  "dependencies": {
    "@ton/core": "^0.60.0",
    "@ton/ton": "^15.3.0",
    "@ton/crypto": "^3.2.0",
    "buffer": "^6.0.3",
    "crypto-js": "^4.2.0",
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/jest": "^29.5.0",
    "@types/crypto-js": "^4.2.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.0",
    "typescript": "^5.3.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.0",
    "@ton/blueprint": "^0.18.0",
    "@ton/sandbox": "^0.15.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/ton-fusion-plus.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/ton-fusion-plus/issues"
  },
  "homepage": "https://github.com/your-org/ton-fusion-plus#readme",
  "files": [
    "dist",
    "contracts",
    "README.md",
    "LICENSE"
  ]
